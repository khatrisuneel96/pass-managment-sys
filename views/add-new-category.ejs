<%- include('header') %>
      <div class="container">
        
        <div class="row">
            <div id="categorybox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Add New Password Category</div>
                    </div>  
                    <div class="panel-body" >
                      <% if(errors != '') {%>
                        <div id="loginalert" class="alert alert-danger">
                            <p style="text-align: center;"><%= errors.passwordCategory.msg %></p>
                        </div>
                        <% } %>
                        <% if(success != '') {%>
                          <div id="loginalert" class="alert alert-success">
                              <p style="text-align: center;"><%= success %></p>
                          </div>
                          <% } %>
                        <form action="/add-new-category" id="NewCategoryForm" class="form-horizontal" method="post">
                            <div class="form-group">
                                <label for="passwordCategory" class="col-md-3 control-label">Category Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="passwordCategory" placeholder="Enter Your Password Category" required>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Add Category" class="btn btn-primary">   
                                </div>
                            </div>
                            <p><a href="/view-all-category">View All Password Category</a></p>
  
                        </form>
                     </div>
                </div>
              </div>
            </div>
          </div>
        </div> 
        <%- include('footer') %>
